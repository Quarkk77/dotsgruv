        "on-scroll-down": "~/.config/waybar/scripts/player-prev-throttled.sh",
        "ignored-players": ["chromium", "firefox"]
    },

    "tray": {
        "spacing": 10,
        "tooltip": false
    },

    "clock": {
        "format": "{:%I:%M %p - %a, %d %b %Y}",
        "tooltip-format": "<tt><small>{calendar}</small></tt>",
	"on-click": "gnome-calendar"
    },

    "cpu": {
